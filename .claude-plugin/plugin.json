{
  "name": "jira-integration",
  "version": "2.0.1",
  "description": "Comprehensive Jira integration with two specialized skills: jira-mcp for API operations via mcp-atlassian MCP server, and jira-syntax for wiki markup validation and templates.",
  "repository": "https://github.com/netresearch/jira-skill",
  "license": "MIT",
  "author": {
    "name": "Netresearch DTT GmbH",
    "email": "info@netresearch.de"
  },
  "keywords": [
    "jira",
    "atlassian",
    "mcp",
    "issue-tracking",
    "project-management",
    "wiki-markup",
    "syntax-validation",
    "templates"
  ],
  "skills": [
    {
      "name": "jira-mcp",
      "path": "skills/jira-mcp"
    },
    {
      "name": "jira-syntax",
      "path": "skills/jira-syntax"
    }
  ],
  "mcpServers": {
    "mcp-atlassian": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--pull=always",
        "--env-file",
        "${HOME}/.env.jira",
        "ghcr.io/sooperset/mcp-atlassian:latest"
      ]
    }
  }
}
